"Basic highlighting
syntax on
"No error sounds
set noerrorbells
set tabstop=4 softtabstop=4
"Shift+ arrow indents the current line
set shiftwidth=4
"convert from tabs to spaces
set expandtab
set smartindent
"Sets line numbers
set nu
set nowrap
set smartcase
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
"set colorcolumn=80
set scrolloff=8
set signcolumn=yes

" To Source this current file
" : source %
